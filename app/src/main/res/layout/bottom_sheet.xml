<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/some_white">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view6"
        android:background="@color/some_white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello !"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageViewlife"
        android:src="@drawable/life"
        android:layout_alignBottom="@+id/view6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageViewnotes"
        android:src="@drawable/note"
        android:layout_marginEnd="42dp"
        android:layout_alignTop="@+id/imageViewlife"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageViewrun"
        android:src="@drawable/run"
        android:layout_alignTop="@+id/imageViewlife"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botttom_sheet_rv"
        android:layout_below="@+id/view6"
        android:layout_alignParentStart="true" />


</RelativeLayout>
